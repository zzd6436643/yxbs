<?xml version="1.0" encoding="UTF-8"?><beans:beans xmlns="http://www.springframework.org/schema/security" xmlns:beans="http://www.springframework.org/schema/beans"	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"	xsi:schemaLocation="http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd	http://www.springframework.org/schema/security	http://www.springframework.org/schema/security/spring-security-3.0.xsd">	<http auto-config='true'>		<intercept-url pattern="/index/welcome" filters='none' />		<intercept-url pattern="/index/notlogin" filters='none' />		<intercept-url pattern="/resources/**" filters='none' />		<intercept-url pattern="/index/**" access="ROLE_ADMIN,ROLE_ROOT" />		<intercept-url pattern="/userMgr/**" access="ROLE_ROOT" />		<form-login login-page='/index/welcome' authentication-failure-url="/index/notlogin" default-target-url="/index/login"			always-use-default-target='true' />		<access-denied-handler error-page="/index/accessDenied"/>  		<logout invalidate-session="true" logout-success-url="/index/welcome" logout-url="/j_spring_security_logout" />		<session-management invalid-session-url="/index/welcome" />	</http>	<authentication-manager>		<authentication-provider>			<jdbc-user-service data-source-ref="dataSource"				users-by-username-query="SELECT username,passwd as password,isenable as enable FROM sys_user where username=?"				authorities-by-username-query="SELECT username,role as authority FROM sys_user WHERE username=?" />			<password-encoder ref="passwordEncoder">				<!-- 用户名做为盐值 -->				<salt-source user-property="username" />			</password-encoder>		</authentication-provider>	</authentication-manager>	</beans:beans>